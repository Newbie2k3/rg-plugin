{
    "name": "RG Extension",
    "version": "0.0.1",
    "manifest_version": 2,
    "description" : "Extension for Github and Redmine",
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon.png",
            "38": "images/icon.png"
        },
        "default_title": "RG Extension",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://github.com/*/compare/*",
                "*://dev.sun-asterisk.com/issues/*"
            ],
            "js": [
                "scripts/content.js"
            ],
            "css": [
                "styles/main.css"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "clipboardWrite",
        "storage"
    ]
}
