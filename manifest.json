{
    "name": "RG Extension",
    "version": "0.0.1",
    "manifest_version": 2,
    "description" : "Extension for Github and Redmine",
    "icons": {
        "16": "images/icons.png",
        "48": "images/icons.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icons.png",
            "38": "images/icons.png"
        },
        "default_title": "RG Extension",
        "default_popup": "browseraction/popup.html"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [{
        "matches": [
            "*github*",
            "*dev.sun-asterisk*"
        ],
        "js": [
            "scripts/contentscript.js"
        ],
        "run_at": "document_start"
    }],
    "permissions": [
        "clipboardWrite",
        "storage"
    ]
}
