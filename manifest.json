{
    "name": "RG Hehe",
    "version": "0.0.1",
    "manifest_version": 2,
    "description" : "Extension for Github and Redmine",
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon.png",
            "38": "images/icon.png"
        },
        "default_title": "RG Hehe",
        "default_popup": "popup.html"
    },
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*",
                "https://www.chatwork.com/*",
                "https://dev.sun-asterisk.com/issues/*",
                "https://dev.sun-asterisk.com/redmine/issues*"
            ],
            "js": [
                "scripts/content.js",
                "scripts/lib/bootstrap.min.js"
            ],
            "css": [
                "styles/font.css",
                "styles/main.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        "scripts/resources/chatwork.js"
    ],
    "permissions": [
        "clipboardWrite",
        "storage"
    ]
}
